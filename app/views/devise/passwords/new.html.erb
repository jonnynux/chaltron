<div class='container-fluid'>
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { role: 'form', method: :post, class: 'login-box form-horizontal' }) do |f| %>
    <h3 class='page-header'><%= t '.title' %></h3>
    <p><%= t '.par1' %></p>
    <%= f.input :email, autofocus: true %>
    <div class='form-group'>
      <div class='col-sm-offset-3 col-sm-9'>
        <%= f.submit 'Submit', class: 'btn btn-primary' %>
      </div>
    </div>
    <hr>
    <p>
      <span><%= t '.par2' %></span>
      <strong><%= link_to 'Login', new_session_path(resource_name) %> </strong>
    </p>
  <% end %>
</div>
